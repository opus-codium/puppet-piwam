default: &default
  adapter: postgresql
  encoding: unicode
  # For details on connection pooling, see rails configuration guide
  # http://guides.rubyonrails.org/configuring.html#database-pooling
  pool: 5

production:
  <<: *default
  database: <%= scope['::piwam::database_name'] %>
  username: <%= scope['::piwam::database_user'] %>
  password: <%= scope['::piwam::database_password'] %>
